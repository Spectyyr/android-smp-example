<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    app:contentInsetEnd="0dp"
    app:contentInsetStart="0dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/user_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User"
            android:textAppearance="@android:style/TextAppearance.Material.Medium"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/user_balance_textview"
            android:layout_marginTop="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/user_balance_textview"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="16dp"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/user_balance_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="Points"
            android:textAppearance="@android:style/TextAppearance.Material.Medium"
            app:layout_constraintLeft_toRightOf="@+id/user_textview"
            app:layout_constraintTop_toTopOf="@+id/authenticate_button"
            android:layout_marginTop="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/authenticate_button"
            android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.6" />

        <Button
            android:id="@+id/authenticate_button"
            style="@android:style/Widget.DeviceDefault.Button.Borderless.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:paddingBottom="0dp"
            android:paddingTop="0dp"
            android:text="@string/click_here_to_authenticate"
            app:layout_constraintRight_toRightOf="parent" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.Toolbar>
